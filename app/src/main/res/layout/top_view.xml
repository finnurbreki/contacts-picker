<com.example.finnur.contactspicker.TopView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="2dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/disclaimer_sharing_contact_details" />

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/explanation">

        <!-- Not needed in Chromium, but defaults in Android Studio are wrong color. -->
        <android.support.v7.widget.AppCompatCheckBox
            app:buttonTint="@color/modern_blue_600"
            android:id="@+id/select_all_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/all_contacts"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/select_all_checkbox"
            android:text="@string/contacts_picker_all_contacts"
            style="@style/TextAppearance.BlackTitle1" />

        <TextView
            android:id="@+id/contact_count"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/select_all_checkbox"
            android:layout_below="@id/all_contacts"
            style="@style/TextAppearance.BlackBody"/>
    </RelativeLayout>

</com.example.finnur.contactspicker.TopView>
